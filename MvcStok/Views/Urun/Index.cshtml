@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <th>@item.URUNID</th>
            <td>@item.URUNAD</td>
            <td>@item.MARKA</td>
            @*Inner Join işlemi. Kategori Id yerine adını getirmek için kullandık.*@
            <td>@item.TBLKATEGORILER.KATEGORIAD</td>
            <td>@item.FIYAT</td>
            <td>@item.STOK</td>
            <td><a href="/Urun/Sil/@item.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="Urun/UrunGetir/@item.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }
    </tbody>
</table>

<a href="/Urun/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>